{#
/**
 * @file
 * Default theme implementation to display a homepage layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
set classes = [
'layout--homepage',
]
%}
{% if content %}
    <div{{ attributes.addClass(classes) }}>
        <div class="layout-region layout-region--header">
            {{ content.header }}
        </div>

        <div class="layout-region layout-region--countdown">
          {{ content.countdown }}
        </div>

        <div class="layout-region layout-region--exhibition">
            {{ content.exhibition }}
        </div>

        <div class="layout-region layout-region--facts">
            {{ content.facts }}
        </div>

        <div class="layout-region layout-region--sections">
            {{ content.sections }}
        </div>

        <div class="layout-region layout-region--program">
            {{ content.program }}
        </div>

        <div class="layout-region layout-region--participate">
            {{ content.participate }}
        </div>

        <div class="layout-region layout-region--news">
            {{ content.news }}
        </div>

        <div class="layout-region layout-region--social-media">
            {{ content.social_media }}
        </div>
    </div>
{% endif %}
